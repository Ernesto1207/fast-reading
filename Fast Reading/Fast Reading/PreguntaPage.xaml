<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fast_Reading.PreguntaPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="¿En donde enseñaban los sabios de la realeza?" 
               FontSize="Large" 
               Margin="0,0,0,20"/>

            <StackLayout x:Name="opcionesStackLayout" 
                     Orientation="Vertical" 
                     HorizontalOptions="CenterAndExpand" 
                     VerticalOptions="CenterAndExpand" 
                     Spacing="10">

                <Button x:Name="opcionA" 
                    Text="Opción A" 
                    Clicked="Comprobar_Clicked" 
                    Margin="0,0,0,10"/>

                <Button x:Name="opcionB" 
                    Text="Opción B" 
                    Clicked="Comprobar_Clicked" 
                    Margin="0,0,0,10"/>

                <Button x:Name="opcionC" 
                    Text="Opción C" 
                    Clicked="Comprobar_Clicked" 
                    Margin="0,0,0,10"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>